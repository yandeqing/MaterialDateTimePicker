<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FilterTextView">
        <attr name="ftv_icon" format="reference" />
        <attr name="ftv_iconSelected" format="reference" />
        <attr name="ftv_textColor" format="color" />
        <attr name="ftv_textColorSelected" format="color" />
        <attr name="ftv_iconLocation" format="enum">
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
            <enum name="TOP" value="3" />
            <enum name="BOTTOM" value="4" />
        </attr>
    </declare-styleable>

</resources>